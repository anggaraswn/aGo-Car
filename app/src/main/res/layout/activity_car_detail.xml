<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CarDetailActivity">

        <TextView
            android:id="@+id/tvCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/lexendmed"
            android:text="@string/carNamePlaceholder"
            android:textSize="25sp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/ivCarImage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCarName"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:id="@+id/squareContainer1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_rectangle_container"
            app:layout_constraintEnd_toStartOf="@+id/squareContainer2"
            app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

        <ImageView
            android:id="@+id/ivEngine"
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_engine"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer1"
            app:layout_constraintTop_toTopOf="@id/squareContainer1" />

        <TextView
            android:id="@+id/tvEngine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivEngine"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer1"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:text="@string/engine"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvEngine"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer1"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:text="@string/engine"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            />

        <View
            android:id="@+id/squareContainer2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/ic_rectangle_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

        <ImageView
            android:id="@+id/ivGearbox"
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_gearbox"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer2"
            app:layout_constraintTop_toTopOf="@id/squareContainer2" />

        <TextView
            android:id="@+id/tvTransmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivGearbox"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer2"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:text="@string/transmission"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvTransmissionCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTransmission"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer2"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:text="@string/engine"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            />

        <View
            android:id="@+id/squareContainer3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/ic_rectangle_container"
            app:layout_constraintStart_toEndOf="@+id/squareContainer2"
            app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

        <ImageView
            android:id="@+id/ivFuel"
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_gas_station"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer3"
            app:layout_constraintTop_toTopOf="@id/squareContainer3" />

        <TextView
            android:id="@+id/tvFuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivGearbox"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer3"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:text="@string/fuelType"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvFuelCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvFuel"
            app:layout_constraintLeft_toLeftOf="@id/squareContainer3"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:text="@string/engine"
            android:textSize="10sp"
            android:textStyle="bold"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:width="300dp"
            android:text="Desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/squareContainer2" />

        <TextView
            android:id="@+id/tvReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:width="300dp"
            android:fontFamily="@font/lexendmed"
            android:text="Reviews"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviews"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReviews" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civUserProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvReviews" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="32dp"
            android:inputType="number"
            android:text="@string/rating"
            app:layout_constraintLeft_toRightOf="@id/civUserProfile"
            app:layout_constraintTop_toBottomOf="@id/rvReviews" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>