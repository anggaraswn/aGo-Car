<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CarDetailActivity">
    <TextView
        android:id="@+id/tvCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/carNamePlaceholder"
        app:layout_constraintHorizontal_bias="0.498"
        android:textSize="25sp"
        android:fontFamily="@font/lexendmed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <ImageView
        android:id="@+id/ivCarImage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCarName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/squareContainer1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintEnd_toStartOf="@+id/squareContainer2"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

    <View
        android:id="@+id/squareContainer2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <View
        android:id="@+id/squareContainer3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintStart_toEndOf="@+id/squareContainer2"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:text="Desc"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/squareContainer2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tvReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:text="Reviews"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/lexendmed"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviews"
            android:layout_width="300dp"
            android:layout_height="350dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReviews"
             />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civUserProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvReviews" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="245dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"

            android:inputType="number"
            android:layout_marginTop="32dp"
            android:text="@string/rating"
            app:layout_constraintLeft_toRightOf="@id/civUserProfile"
            app:layout_constraintTop_toBottomOf="@id/rvReviews"
             />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>