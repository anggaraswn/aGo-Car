<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarDetailActivity">

    <TextView
        android:id="@+id/tvCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/carNamePlaceholder"
        app:layout_constraintHorizontal_bias="0.498"
        android:textSize="25sp"
        android:fontFamily="@font/lexendmed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <ImageView
        android:id="@+id/ivCarImage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCarName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/squareContainer1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintEnd_toStartOf="@+id/squareContainer2"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

    <View
        android:id="@+id/squareContainer2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <View
        android:id="@+id/squareContainer3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintStart_toEndOf="@+id/squareContainer2"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

</androidx.constraintlayout.widget.ConstraintLayout>