<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarDetailActivity">

    <TextView
        android:id="@+id/tvCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/carNamePlaceholder"
        app:layout_constraintHorizontal_bias="0.498"
        android:textSize="25sp"
        android:fontFamily="@font/lexendmed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toStartOf="@+id/tvCarName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <ImageView
        android:id="@+id/ivCarImage"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCarName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/squareContainer1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintEnd_toStartOf="@+id/squareContainer2"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

    <View
        android:id="@+id/squareContainer2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <View
        android:id="@+id/squareContainer3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_rectangle_container"
        app:layout_constraintStart_toEndOf="@+id/squareContainer2"
        app:layout_constraintTop_toBottomOf="@+id/ivCarImage" />

    <ImageView
        android:id="@+id/ivFuel"
        android:layout_width="34dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/baseline_local_gas_station_24"
        app:layout_constraintStart_toEndOf="@id/squareContainer2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/ivCarImage"
        />

    <TextView
        android:id="@+id/tvFuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fuelType"
        app:layout_constraintTop_toBottomOf="@id/ivFuel"
        app:layout_constraintStart_toEndOf="@id/squareContainer2"
        android:layout_marginLeft="25dp"
        android:textSize="10sp"
        android:fontFamily="@font/lexendmed"
        />

    <TextView
        android:id="@+id/tvFuelDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fuelType"
        app:layout_constraintTop_toBottomOf="@id/tvFuel"
        app:layout_constraintStart_toEndOf="@id/squareContainer2"
        android:layout_marginLeft="25dp"
        android:textSize="10sp"
        android:fontFamily="@font/lexendmed"
        android:textStyle="bold"
        />



