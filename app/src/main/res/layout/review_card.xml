<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civUserProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@id/civUserProfile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/lexendmed"
        android:textSize="10sp"
         />
    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@id/tvUsername"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/lexendmed"
        android:textSize="10sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvComment"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@id/civUserProfile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvUsername"
        android:fontFamily="@font/lexendmed"
        android:textSize="10sp"
        />

    <ImageView
        android:id="@+id/ivLikeImageEmpty"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/baseline_thumb_up_off_alt_24"
        tools:layout_editor_absoluteX="377dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
         />
    <ImageView
        android:id="@+id/ivLikeImageFilled"
        android:src="@drawable/baseline_thumb_up_20"
        android:layout_width="18dp"
        android:layout_height="18dp"
        tools:layout_editor_absoluteX="377dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        android:visibility="invisible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>