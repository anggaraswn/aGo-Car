<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="241dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_edit_text"
    android:paddingHorizontal="5dp"
    android:paddingVertical="12dp"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginHorizontal="25dp"
        />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        >

        <TextView

            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/hello"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvRatings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/ratings"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="40dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/tvRatings"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_star"
            />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/ivEngine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_engine"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:id="@+id/tvHP"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/ivEngine"
            android:layout_marginLeft="7dp"
            android:text="@string/hp"
            android:fontFamily="@font/lexendmed"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvTransmission"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/tvHP"
            android:layout_marginLeft="34dp"
            android:text="@string/hello"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/hello"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="40dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>