<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="13dp"
    android:layout_marginBottom="13dp"
    android:background="@drawable/round_edit_text">

    <ImageView
        android:id="@+id/ivImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="125dp"
        android:layout_height="78dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tvCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivImage"
        android:layout_marginLeft="13dp"
        android:fontFamily="@font/lexendmed"
        android:textColor="@color/black"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/ivEngine"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/ivImage"
        app:layout_constraintTop_toBottomOf="@id/tvCarName"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_engine"
        />

    <TextView
        android:id="@+id/tvEngine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCarName"
        app:layout_constraintLeft_toRightOf="@id/ivEngine"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/lexendmed"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvTransmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvEngine"
        app:layout_constraintLeft_toRightOf="@id/ivImage"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="9sp"
        android:textColor="@color/black"
        />
    
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTransmission"
        app:layout_constraintLeft_toRightOf="@id/ivImage"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="9sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTransmission"
        android:textSize="10sp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvRating"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvTransmission"
        android:src="@drawable/ic_star"
        />

</androidx.constraintlayout.widget.ConstraintLayout>